---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const categories = [
  { name: 'Archaeology', slug: 'archaeology', description: 'Trace the origins and evolution of AI agent systems', color: 'orange' },
  { name: 'Anatomy', slug: 'anatomy', description: 'Explore architecture, memory, and computational structures', color: 'cyan' },
  { name: 'Taxonomy', slug: 'taxonomy', description: 'Classification systems for autonomous agents', color: 'purple' },
  { name: 'Ethology', slug: 'ethology', description: 'Understand behavioral patterns and failure modes', color: 'emerald' },
  { name: 'Linguistics', slug: 'linguistics', description: 'Prompts, protocols, and agent communication', color: 'blue' },
  { name: 'Sociology', slug: 'sociology', description: 'Multi-agent dynamics and coordination', color: 'pink' },
  { name: 'Ecology', slug: 'ecology', description: 'Environments, niches, and competitive landscapes', color: 'green' },
  { name: 'Ethics', slug: 'ethics', description: 'Alignment, governance, and moral frameworks', color: 'rose' },
];

const allEntries = await getCollection('entries');
const publishedEntries = allEntries
  .filter(entry => entry.data.status === 'published')
  .sort((a, b) => (b.data.date?.getTime() || 0) - (a.data.date?.getTime() || 0))
  .slice(0, 6);

const totalEntries = allEntries.length;
---

<Base title="Agentology">
  <!-- Hero Section -->
  <section class="section text-center">
    <div class="container-apple">
      <p class="text-body-lg text-text-muted mb-4 animate-fade-in-up">The Encyclopedia of AI Agents</p>
      <h1 class="text-display-lg md:text-display-xl text-text-primary mb-6 animate-fade-in-up animate-delay-100">
        Agentology
      </h1>
      <p class="text-body-lg text-text-secondary max-w-2xl mx-auto mb-10 animate-fade-in-up animate-delay-200">
        An anthropological framework for understanding autonomous AI systems — their taxonomy, behavior, evolution, and ecology.
      </p>
      <div class="flex items-center justify-center gap-4 animate-fade-in-up animate-delay-300">
        <a href="/entries/agentogenesis" class="btn-primary">
          Get Started
        </a>
        <a href="/taxonomy" class="btn-secondary">
          Browse Entries
        </a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 border-y border-border-secondary">
    <div class="container-apple">
      <div class="flex items-center justify-center gap-16">
        <div class="text-center">
          <p class="text-display-sm text-text-primary">{totalEntries}</p>
          <p class="text-body-sm text-text-muted">Entries</p>
        </div>
        <div class="text-center">
          <p class="text-display-sm text-text-primary">8</p>
          <p class="text-body-sm text-text-muted">Categories</p>
        </div>
        <div class="text-center">
          <p class="text-display-sm text-text-primary">Open</p>
          <p class="text-body-sm text-text-muted">Source</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="section-alt">
    <div class="container-apple-lg">
      <div class="text-center mb-12">
        <h2 class="text-headline text-text-primary mb-3">Explore by Category</h2>
        <p class="text-body text-text-secondary">Eight domains adapted from anthropological methodology</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-5">
        {categories.map((cat, index) => (
          <a
            href={`/taxonomy?category=${cat.slug}`}
            class="card-hover p-6 group"
            style={`animation: fade-in-up 0.5s ease-out ${index * 0.05}s both`}
          >
            <span class={`category-badge category-${cat.slug} mb-4`}>
              {cat.name}
            </span>
            <p class="text-body-sm text-text-secondary group-hover:text-text-primary transition-colors">
              {cat.description}
            </p>
            <span class="link-arrow text-body-sm mt-4 opacity-0 group-hover:opacity-100 transition-opacity">
              Explore
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Entries Section -->
  {publishedEntries.length > 0 && (
    <section class="section">
      <div class="container-apple-lg">
        <div class="flex items-end justify-between mb-10">
          <div>
            <h2 class="text-headline text-text-primary mb-2">Recent Entries</h2>
            <p class="text-body text-text-secondary">Latest additions to the encyclopedia</p>
          </div>
          <a href="/taxonomy" class="link-arrow text-body">
            View all
          </a>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {publishedEntries.map((entry, index) => (
            <a
              href={`/entries/${entry.slug}`}
              class="card-hover p-6 group"
              style={`animation: fade-in-up 0.5s ease-out ${index * 0.05}s both`}
            >
              <span class={`category-badge category-${entry.data.category} mb-4`}>
                {entry.data.category}
              </span>
              <h3 class="text-title-sm text-text-primary mb-2 group-hover:text-accent-blue transition-colors">
                {entry.data.title}
              </h3>
              <p class="text-body-sm text-text-secondary line-clamp-2">
                {entry.data.description}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="section-alt">
    <div class="container-apple text-center">
      <h2 class="text-headline text-text-primary mb-4">Start Your Journey</h2>
      <p class="text-body-lg text-text-secondary max-w-xl mx-auto mb-8">
        Begin with the foundational concept of Agentogenesis — the emergence and evolution of AI agent systems.
      </p>
      <div class="flex items-center justify-center gap-4">
        <a href="/entries/agentogenesis" class="btn-primary">
          Read Agentogenesis
        </a>
        <a href="/about" class="link-arrow text-body">
          About the project
        </a>
      </div>
    </div>
  </section>
</Base>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
